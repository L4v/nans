close
clear
%%
% 1.)
close 
clear
f = @(x)sin(x);
x = linspace(pi/3, 4*pi/3, 100);
% a)
plot(x, f(x));
hold on;
% b)
x0 = Bisection(f, min(x), max(x), 10^-5)
scatter(x0, f(x0), 'red');

%%
% 2.)
close
clear
f = @(x) cos(x);
x = linspace(pi/3, 4*pi/3);
% a)
plot(x, f(x));
hold on;
% b)
x0 = Secant(f, min(x), 2, 10^-5, 100)
scatter(x0, f(x0), 'red');

%%
% 3.)
close
clear
f = @(x)sin(2*x);
x = linspace(pi/4, 7*pi/4, 100);
% a)
plot(x, f(x));
hold on;
x01 = Secant(f, min(x), 2, 10^-5, 100);
x02 = Secant(f, 2, pi, 100, 10^-5, 100);
x03 = Secant(f, 4, max(x), 10^-5, 100);
x0 = [x01; x02; x03]
scatter(x0, f(x0), 'red');